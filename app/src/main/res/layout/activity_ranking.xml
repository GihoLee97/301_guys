<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#F68A06">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_weight="2"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:textSize="40dp"
                android:text="랭킹"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_weight="4"
                />
            <Button
                android:id="@+id/btn_receipt"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="지난 기록 보기"
                android:layout_weight="2"
                android:background="#F68A06"
                android:textColor="@color/white"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="40dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:text="   친구와\n   수익률을 통해\n   경쟁해보세요!"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_kakaoRanking"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="카카오 랭킹"
                android:textStyle="bold"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_localRanking"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="로컬 랭킹"
                android:textStyle="bold"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/fl_ranking"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/gray">
        <Button
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_gravity="bottom"
            android:layout_height="60dp"
            android:text="홈"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_ranking"
            android:layout_width="0dp"
            android:layout_gravity="bottom"
            android:layout_height="60dp"
            android:text="랭킹"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_market"
            android:layout_width="0dp"
            android:layout_gravity="bottom"
            android:layout_height="60dp"
            android:text="상점"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_profile"
            android:layout_width="0dp"
            android:layout_gravity="bottom"
            android:layout_height="60dp"
            android:text="프로필"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
