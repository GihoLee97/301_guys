<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="201dp"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/tv_my_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="64dp"
                android:text="전성원"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textAppearance="@style/profile_nickname" />
            <TextView
                android:id="@+id/tv_nickname_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/tv_my_nick"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="79dp"
                android:textAppearance="@style/profile_nickname_change"
                android:text="닉네임 변경 > "/>
            <TextView
                android:id="@+id/tv_pw_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/tv_my_nick"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="59dp"
                android:textAppearance="@style/profile_nickname_change"
                android:visibility="gone"
                android:text="비밀번호 변경 > "/>
            <ImageView
                android:id="@+id/iv_my_image"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="24dp"
                android:layout_marginTop="60dp">
            </ImageView>
            <TextView
                android:id="@+id/tv_my_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="레벨"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="134dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textAppearance="@style/proflie_level"/>
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/pb_exp_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="161dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:progress="50"
                android:progressDrawable="@drawable/custom_progressbar_horizontal" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:orientation="horizontal"
                    android:id="@+id/ll_notice">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:text="공지사항"
                        android:layout_marginLeft="24dp"
                        android:textColor="#6C7B8E"
                        android:textAppearance="@style/profile_letter"
                        android:gravity="center|left"
                        android:layout_weight="3"/>
                    <ImageButton
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:gravity="center|right"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/ic_path"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:orientation="horizontal"
                    android:id="@+id/ll_version_info">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="24dp"
                        android:text="버전정보"
                        android:textAppearance="@style/profile_letter"
                        android:textColor="#6C7B8E"
                        android:gravity="center|left"
                        android:layout_weight="3"/>
                    <ImageButton
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:gravity="center|right"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/ic_path"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:background="#EAEEEF"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:orientation="horizontal"
                    android:id="@+id/ll_game_option">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="24dp"
                        android:text="게임설정"
                        android:textAppearance="@style/profile_letter"
                        android:textColor="#6C7B8E"
                        android:gravity="center|left"
                        android:layout_weight="3"/>
                    <ImageButton
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:gravity="center|right"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/ic_path"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_alarmSetting"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="@style/profile_letter"
                        android:layout_marginLeft="24dp"
                        android:text="알림"
                        android:textColor="#6C7B8E"
                        android:gravity="center|left"
                        android:layout_weight="3"/>
                    <ImageButton
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:gravity="center|right"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/ic_path"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="@style/profile_letter"
                        android:layout_marginLeft="24dp"
                        android:text="아이템 구매 이력"
                        android:gravity="center|left"
                        android:layout_weight="3"/>
                    <ImageButton
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:gravity="center|right"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/ic_path"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:background="#EAEEEF"/>

                <LinearLayout
                    android:id="@+id/ll_support"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="24dp"
                        android:text="고객센터 / 도움말"
                        android:textAppearance="@style/profile_letter"
                        android:textColor="#6C7B8E"
                        android:gravity="center|left"
                        android:layout_weight="3"/>
                    <ImageButton
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:gravity="center|right"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/ic_path"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_sign_out"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="24dp"
                        android:text="로그아웃"
                        android:textAppearance="@style/profile_letter"
                        android:textColor="#6C7B8E"
                        android:gravity="center|left"
                        android:layout_weight="3"/>
                    <ImageButton
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:gravity="center|right"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/ic_path"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_withdraw"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="24dp"
                        android:text="게임 탈퇴"
                        android:textAppearance="@style/profile_withdraw"
                        android:gravity="center|left"
                        android:layout_weight="3"/>
                    <ImageButton
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:gravity="center|right"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/ic_path"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>



    </LinearLayout>

</FrameLayout>