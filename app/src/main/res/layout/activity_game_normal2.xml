<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameNormalActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="12">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="게임 1"
                android:textSize="20sp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_assetInfo"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="5">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="3"
                android:weightSum="3"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="총 자산은"
                    android:textSize="20sp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="&#xffe6; 149,925,000 입니다"
                    android:textSize="20sp">
                </TextView>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="수익률"
                        android:textSize="16sp"></TextView>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="56.2 %"
                        android:textSize="16sp">
                    </TextView>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="총 손익"
                        android:textSize="16sp">
                    </TextView>
                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:layout_marginRight="20dp"
                        android:gravity="right"
                        android:text="&#xffe6; 52,463,000"
                        android:textSize="16sp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>


            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/cht_snp"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_weight="6">
            </com.github.mikephil.charting.charts.LineChart>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:orientation="horizontal">

            </LinearLayout>


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_weight="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="510dp"
                android:orientation="vertical"
                android:weightSum="17">


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_weight="6">

                </HorizontalScrollView>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1">
                    <View
                        android:layout_width="375dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="@color/black">
                    </View>
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="28dp"
                        android:gravity="center"
                        android:text="뉴스"
                        android:textSize="15sp">
                    </TextView>
                    <View
                        android:layout_width="375dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="@color/black">
                    </View>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_weight="10">

                </LinearLayout>


            </LinearLayout>


        </ScrollView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:weightSum="3">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:weightSum="6">
                <Button
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="아이템"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:backgroundTint="#666666"
                    android:background="#666666">
                </Button>
                <Button
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:text="거래하기"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:backgroundTint="#F68A06"
                    android:background="#F68A06">
                </Button>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="#E5E5E5">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="피로도"
                    android:textSize="15sp">
                </TextView>
                <ProgressBar
                    android:id="@+id/progress_value1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:indeterminateOnly="false"
                    android:max="10000"
                    android:progress="0"
                    android:indeterminateTint="#ff0000">
                </ProgressBar>
            </LinearLayout>


        </LinearLayout>

        
    </LinearLayout>



</FrameLayout>