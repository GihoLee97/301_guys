<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="256dp"
        android:layout_height="212dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/ic_rectangle_negotiation"
        android:elevation="5dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="협상 성공 !"
            android:textAppearance="@style/negotiation_success_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_before_title"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:layout_marginStart="58dp"
            android:text="기존"
            android:textAppearance="@style/negotiation_succes_subtitle"
            />

        <TextView
            android:id="@+id/tv_after_title"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:layout_marginEnd="55dp"
            android:text="인상 후"
            android:textAppearance="@style/negotiation_succes_subtitle"
            />


        <TextView
            android:id="@+id/tv_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_after_title"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="73dp"
            android:layout_marginStart="42dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="$15,000"
            android:textAppearance="@style/negotiation_success_content"
            />

        <TextView
            android:id="@+id/tv_after"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_after_title"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="73dp"
            android:layout_marginEnd="46dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="$16,000"
            android:textAppearance="@style/negotiation_success_content"
            />


        <Button
            android:id="@+id/btn_close"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/ic_asset_dialog_close_button"
            android:gravity="center"
            android:text="창 닫기"
            android:textAppearance="@style/game_dialog_asset_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>