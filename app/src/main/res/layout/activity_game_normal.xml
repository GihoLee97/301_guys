<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameNormalActivity">

    <LinearLayout
        android:id="@+id/Layout_fund"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible"
        android:gravity="center|top">
        <TextView
            android:layout_marginVertical="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_fund"
            android:background="@color/gray"
            android:textColor="@color/white"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Layout_bond"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center|top"
        android:visibility="invisible"
        >
        <TextView
            android:layout_marginVertical="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_bond"
            android:background="@color/gray"
            android:textColor="@color/white"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Layout_indpro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center|top"
        android:visibility="invisible"
        >
        <TextView
            android:layout_marginVertical="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_indpro"
            android:background="@color/gray"
            android:textColor="@color/white"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Layout_unem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible"
        android:gravity="center|top">
        <TextView
            android:layout_marginVertical="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_unem"
            android:background="@color/gray"
            android:textColor="@color/white"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Layout_inf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible"
        android:gravity="center|top">
        <TextView
            android:layout_marginVertical="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_inf"
            android:background="@color/gray"
            android:textColor="@color/white"
            android:textSize="20dp"/>
    </LinearLayout>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout_GameNormalActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                app:layout_constraintBottom_toTopOf="@+id/cht_snp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/layout_btn_fund"
                        app:layout_constraintTop_toTopOf="parent">
                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/cht_fund"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/layout_btn_bond"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/cht_bond"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/layout_btn_indpro"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/cht_indpro"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/layout_btn_unem"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/cht_unem"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/layout_btn_inf"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/cht_inf"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/cht_snp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="5"
                    >
                    <TextView
                        android:id="@+id/news1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="뉴스1"
                        android:textSize="15dp">
                    </TextView>
                    <TextView
                        android:id="@+id/news2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="뉴스2"
                        android:textSize="15dp">
                    </TextView>
                    <TextView
                        android:id="@+id/news3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="뉴스3"
                        android:textSize="15dp">
                    </TextView>
                    <TextView
                        android:id="@+id/news4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="뉴스4"
                        android:textSize="15dp">
                    </TextView>
                    <TextView
                        android:id="@+id/news5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="뉴스5"
                        android:textSize="15dp">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="투자경력"
                        android:textSize="15sp">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0 년"
                        android:textSize="20sp">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0 개월"
                        android:textSize="15sp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp">

                <TextView
                    android:id="@+id/tv_notification"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:text="알림: chart data loading...!"
                    android:textSize="15sp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="0dp"
                android:orientation="horizontal"
                android:weightSum="13">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="6"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="현재가"
                        android:gravity="center"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="평균단가"
                        android:gravity="center"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="보유수량"
                        android:gravity="center"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="평가금액"
                        android:gravity="center"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="수익률"
                        android:gravity="center"
                        android:layout_weight="1">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:weightSum="6"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="1x"
                        android:gravity="center"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_price1x"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="0"
                        android:gravity="right"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_aver1x"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="0"
                        android:gravity="right"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_quant1x"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="0"
                        android:gravity="right"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_val1x"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="0"
                        android:gravity="right"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_profit1x"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="0 %"
                        android:gravity="right"
                        android:layout_weight="1">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:weightSum="6"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="3x"
                        android:gravity="center"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_price3x"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="0"
                        android:gravity="right"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_aver3x"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="0"
                        android:gravity="right"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_quant3x"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="0"
                        android:gravity="right"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_val3x"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="0"
                        android:gravity="right"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_profit3x"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="0 %"
                        android:gravity="right"
                        android:layout_weight="1">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:weightSum="6"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="-1x"
                        android:gravity="center"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_priceinv1x"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="0"
                        android:gravity="right"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_averinv1x"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="0"
                        android:gravity="right"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_quantinv1x"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="0"
                        android:gravity="right"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_valinv1x"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="0"
                        android:gravity="right"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_profitinv1x"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="0 %"
                        android:gravity="right"
                        android:layout_weight="1">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:weightSum="6"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="-3x"
                        android:gravity="center"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_priceinv3x"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="0"
                        android:gravity="right"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_averinv3x"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="0"
                        android:gravity="right"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_quantinv3x"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="0"
                        android:gravity="right"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_valinv3x"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="0"
                        android:gravity="right"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_profitinv3x"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="0 %"
                        android:gravity="right"
                        android:layout_weight="1">
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:weightSum="10">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_asset"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="총 자산:    " />

                        <TextView
                            android:id="@+id/tv_cash"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="보유 현금:     " />

                        <TextView
                            android:id="@+id/tv_tax"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="납부할 세금:  " />

                        <TextView
                            android:id="@+id/tv_profityear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="당해 실현수익:  " />

                        <TextView
                            android:id="@+id/tv_taxtot"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="세금 합계:  " />

                        <TextView
                            android:id="@+id/tv_tradecomtot"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="수수료 합계:  " />



                    </LinearLayout>
                </ScrollView>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_evaluation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="평가금:    " />

                        <TextView
                            android:id="@+id/tv_dividend"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="배당내역:  " />

                        <TextView
                            android:id="@+id/tv_profit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="순손익:  " />


                        <TextView
                            android:id="@+id/tv_profitrate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="수익률:  " />

                        <TextView
                            android:id="@+id/tv_item1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="아이템1:  " />

                        <TextView
                            android:id="@+id/tv_item2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="아이템2:  " />

                        <TextView
                            android:id="@+id/tv_item3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="아이템3:  " />

                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/btn_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:text="매수"
                    android:textColor="@android:color/holo_red_light" />

                <Button
                    android:id="@+id/btn_sell"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:text="매도"
                    android:textColor="@android:color/holo_blue_bright" />

                <Button
                    android:id="@+id/btn_auto"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:text="자동"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn_item"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:text="아이템"
                    android:textColor="@color/black" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_myAssetState"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@color/purple_200"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_myAssetStateDrawerClose"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:text=">" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
