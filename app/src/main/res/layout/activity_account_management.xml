<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AccountManagementActivity">

    <LinearLayout
        android:id="@+id/layout_generalAccountManagement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@color/purple_200"
            android:text="GENERAL ACCOUNT"
            android:textAlignment="center"
            android:textSize="20dp"/>
        <ImageView
            android:id="@+id/imageView_generalAccountProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:src="@drawable/splashimg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ID"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/editText_generalAcountID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="stockedu"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/btn_generalAccountDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/teal_700"
                android:text="회원탈퇴"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_generalAcountEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:backgroundTint="@color/teal_700"
                android:text="로그아웃"
                android:textSize="20dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_generalAccountPW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/teal_700"
            android:layout_gravity="center"
            android:text="비밀번호 변경"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_googleAccountManagement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@color/purple_200"
            android:text="GOOGLE ACCOUNT"
            android:textAlignment="center"
            android:textSize="20dp"/>
        <ImageView
            android:id="@+id/imageView_googleAccountProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:src="@drawable/splashimg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ID"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/editText_googleAcountID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="stockedu"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="E-mail"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/editText_googleAcountEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="stockedu@gmail.com"
                android:textSize="20dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_googleAccountSignOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:backgroundTint="@color/teal_700"
            android:layout_gravity="center"
            android:text="구글 계정 로그아웃"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_kakaoAccountManagement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@color/purple_200"
            android:text="KAKAO ACCOUNT"
            android:textAlignment="center"
            android:textSize="20dp"/>
        <ImageView
            android:id="@+id/imageView_kakaoAccountProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:src="@drawable/splashimg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ID"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/editText_kakaoAcountID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="stockedu"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="E-mail"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/editText_kakaoAcountEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="stockedu@gmail.com"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_kakaoAccountDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/teal_700"
                android:layout_gravity="center"
                android:text="카카오 계정 로그아웃"
                android:textSize="18dp" />
            <Button
                android:id="@+id/btn_kakaoAccountRevokeAccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:backgroundTint="@color/teal_700"
                android:layout_gravity="center"
                android:text="카카오 계정 탈퇴"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>