<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/tv_purchase_history_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="2021년 3월 5일"
        android:textAppearance="@style/purchase_history_row_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_purchase_history_stack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100 스텍"
        android:layout_marginTop="12dp"
        android:textAppearance="@style/purchase_history_row_stack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_purchase_history_date" />

    <TextView
        android:id="@+id/tv_purchase_history_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000원"
        android:textAppearance="@style/purchase_history_row_price"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_purchase_history_date" />
</androidx.constraintlayout.widget.ConstraintLayout>