<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GameSettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="게임 설정"
            android:textSize="20sp">
        </TextView>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="계좌이름"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/tv_setname"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:hint="이름을 입력하세요"
                android:textSize="20sp">
            </EditText>


        </LinearLayout>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="left
"
                android:text="초기 자본"
                android:textSize="20sp">

            </TextView>
            <TextView
                android:id="@+id/tv_setcash"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:gravity="right"
                android:text="0 만 원"
                android:textSize="20sp">
            </TextView>
        </LinearLayout>

        <SeekBar
            android:id="@+id/seekbar_setcash"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:max="1000"></SeekBar>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:gravity="left"
                android:text="월별 신규투자금"
                android:textSize="20sp">

            </TextView>
            <TextView
                android:id="@+id/tv_setmonthly"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:gravity="right"
                android:text="0 만 원"
                android:textSize="20sp">
            </TextView>
        </LinearLayout>

        <SeekBar
            android:id="@+id/seekbar_setmonthly"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:max="200">
        </SeekBar>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:gravity="left"
                android:text="연봉 상승률"
                android:textSize="20sp">

            </TextView>
            <TextView
                android:id="@+id/tv_setsalaryraise"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:gravity="right"
                android:text="0 %/year"
                android:textSize="20sp">
            </TextView>
        </LinearLayout>

        <SeekBar
            android:id="@+id/seekbar_setsalaryraise"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:max="200">
        </SeekBar>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:gravity="left"
                android:text="플레이 시간"
                android:textSize="20sp">

            </TextView>
            <TextView
                android:id="@+id/tv_setgamelength"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:gravity="right"
                android:text="0 years"
                android:textSize="20sp">
            </TextView>
        </LinearLayout>

        <SeekBar
            android:id="@+id/seekbar_setgamelength"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:max="4">
        </SeekBar>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:gravity="left"
                android:text="게임 속도"
                android:textSize="20sp">

            </TextView>
            <TextView
                android:id="@+id/tv_setgamespeed"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:gravity="right"
                android:text="0 days/sec"
                android:textSize="20sp">
            </TextView>
        </LinearLayout>

        <SeekBar
            android:id="@+id/seekbar_setgamespeed"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:max="7"
            >
        </SeekBar>


        <Button
            android:id="@+id/btn_gamestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="게임 시작">
        </Button>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>